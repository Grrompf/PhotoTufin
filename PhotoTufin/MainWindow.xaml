<Window x:Class="PhotoTufin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoTufin"
        mc:Ignorable="d"
        Title="Photo Tuplet Finder" Height="450" Width="800">
    <DockPanel Margin="10">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Ordner">
                <MenuItem  Header="_Öffnen" Click="mnuOpen_Click"/>
                <Separator />
                <MenuItem Header="_Beenden" Click="mnuExit_Click"/>
            </MenuItem>
            <MenuItem Name="SignTool" Header="_Signtool" IsEnabled="False">
                <MenuItem  Header="_Verifizieren" />
                <Separator />
                <MenuItem Header="_Signieren" />
            </MenuItem>
            <MenuItem Header="_Hilfe" IsEnabled="True">
                <MenuItem  Header="_Hilfe" />
                <Separator />
                <MenuItem Header="_Info" />
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Top">
            <ListView Margin="10" Name="lbFiles" VerticalAlignment="Stretch">
                <ListView.Resources>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="300" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Verifiziert" Width="60"  DisplayMemberBinding="{Binding IsVerified}" />
                        <GridViewColumn Header="Signiert" Width="60" DisplayMemberBinding="{Binding IsSigned}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>    
        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblNoSelectedFiles" Text="kein Verzeichnis ausgewählt" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock Name="lblSelectedDirectory" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4" HorizontalContentAlignment="Right">
                <TextBlock Name="AppVersion" Text="1.0" />
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
