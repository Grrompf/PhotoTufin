<Window x:Class="PhotoTufin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Photo Tuplet Finder" Height="450" Width="800">
    <DockPanel Margin="10">
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Ordner" Grid.Column="0">
                <MenuItem  Header="Öffnen" Click="mnuOpen_Click"/>
                <Separator />
                <MenuItem Header="Beenden" Click="mnuExit_Click"/>
            </MenuItem>
            <MenuItem Name="Filter" Header="Filter" Grid.Column="1" IsEnabled="True">
                <MenuItem Name="bmp" Header="bmp, dib"  ToolTip="Bitmap" IsCheckable="True" IsChecked="True"/>
                <MenuItem Name="gif" Header="gif"  ToolTip="Graphics Interchange Format" IsCheckable="True" IsChecked="False"/>
                <MenuItem Name="jpg" Header="jpg, jpeg, jpe, jfif"  ToolTip="Joint Photographic Expert Group" IsCheckable="True" IsChecked="True" />
                <MenuItem Name="png" Header="png"  ToolTip="Portable Network Graphics" IsCheckable="True" IsChecked="False"/>
                <MenuItem Name="tif" Header="tif, tiff"  ToolTip="Tagged Image File" IsCheckable="True" IsChecked="True"/>
                <Separator Margin="0,5,0,0">
                    <Separator.Template>
                        <ControlTemplate TargetType="Separator">
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock HorizontalAlignment="Center" FontStyle="Italic" Foreground="Gray" Text="Photo Raw" />
                                <Separator/>
                            </StackPanel>
                        </ControlTemplate>
                    </Separator.Template>
                </Separator>
                <MenuItem Header="3fr"  ToolTip="Hasselbad" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="arw"  ToolTip="Sony" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="crw, cr2, cr3"  ToolTip="Canon Raw" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="dcr, dcs"  ToolTip="Kodac" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="dng"  ToolTip="Leica" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="kdc"  ToolTip="Kodac" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="mdc, mew"  ToolTip="Minolta" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="nef"  ToolTip="Nikon Electric Format" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="orf"  ToolTip="Olympus Raw Image File" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="pef"  ToolTip="Pentax Electronic Format" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="raf"  ToolTip="Fujifilm" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="raw"  ToolTip="Rohbildformat" IsCheckable="True" IsChecked="True"/>
                <Separator Margin="0,5,0,0">
                    <Separator.Template>
                        <ControlTemplate TargetType="Separator">
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock HorizontalAlignment="Center" FontStyle="Italic" Foreground="Gray" Text="Adobe" />
                                <Separator/>
                            </StackPanel>
                        </ControlTemplate>
                    </Separator.Template>
                </Separator>
                <MenuItem Header="ai"   ToolTip="Adobe Illustrator Document" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="indd" ToolTip="Indesign Document" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="pdf"  ToolTip="Portable Document Format" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="psd"  ToolTip="Photoshop Document" IsCheckable="True" IsChecked="False"/>
                <Separator Margin="0,5,0,0">
                    <Separator.Template>
                        <ControlTemplate TargetType="Separator">
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock HorizontalAlignment="Center" FontStyle="Italic" Foreground="Gray" Text="Andere" />
                                <Separator/>
                            </StackPanel>
                        </ControlTemplate>
                    </Separator.Template>
                </Separator>
                <MenuItem Header="eps"  ToolTip="Encapsulated PostScript" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="svg"  ToolTip="Scalable Vector Graphics" IsCheckable="True" IsChecked="False"/>
                <MenuItem Header="swf"  ToolTip="Shockwave Flash" IsCheckable="True" IsChecked="False"/>
                
                        
                    
            </MenuItem>
            <MenuItem Header="_Anzeige" Grid.Column="2" IsEnabled="False">
                <MenuItem  Header="_Verifizieren" />
                <Separator />
                <MenuItem Header="_Signieren" />
            </MenuItem>
            <MenuItem Header="_Info"  Grid.Column="2" IsEnabled="True" HorizontalAlignment="Right" Click="mnuInfo_Click" />
            
        </Menu>
        <Grid DockPanel.Dock="Top">
            <ListView Margin="10" Name="lbFiles" MaxHeight="300" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView.Resources>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                    </Style>
                    <Style TargetType="{x:Type ListViewItem}">
                        <!-- path in toolTip -->
                        <Setter Property="ToolTip" Value="{Binding path}" />
                        <!-- trigger bgColor on tuplet is true -->
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding tuplet}"
                                         Value="true">
                                <Setter Property="Background"
                                        Value="LimeGreen" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Datei" Width="350" DisplayMemberBinding="{Binding fileName}" />
                        <GridViewColumn Header="Hash" Width="160" DisplayMemberBinding="{Binding hashContent}" />
                        <GridViewColumn Header="Größe (kB)" Width="70"  DisplayMemberBinding="{Binding size}" />
                        <GridViewColumn Header="Datum" Width="90" DisplayMemberBinding="{Binding date}" />
                        <GridViewColumn Header="Tuplet" Width="60" DisplayMemberBinding="{Binding tuplet}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>    
        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="lblNoFiles" Text="keine Bilder" />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <TextBlock Name="lblNoDuplicates" Text="keine Duplikate" />
            </StatusBarItem>
            <Separator Grid.Column="3" />
            <StatusBarItem Grid.Column="4">
                <TextBlock Name="lblSelectedDirectory" Text="kein Verzeichnis ausgewählt" />
            </StatusBarItem>
            <Separator Grid.Column="5" />
            <StatusBarItem Grid.Column="6" HorizontalContentAlignment="Right">
                <TextBlock Name="AppVersion" Text="1.0" />
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
